# S3 access policy for n8n
resource "aws_iam_role_policy" "ecs_s3_policy" {
  count = var.enable_s3_storage ? 1 : 0
  name  = "${local.name_prefix}-ecs-s3-policy"
  role  = aws_iam_role.ecs_task.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "s3:PutObject",
          "s3:GetObject",
          "s3:DeleteObject",
          "s3:ListBucket"
        ]
        Resource = [
          aws_s3_bucket.n8n_storage[0].arn,
          "${aws_s3_bucket.n8n_storage[0].arn}/*"
        ]
      }
    ]
  })
}

# CloudWatch Logs policy
resource "aws_iam_role_policy" "ecs_cloudwatch_policy" {
